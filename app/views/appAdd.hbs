<form method="POST" action="{{action}}">
    <table class="table table-bordered table-striped">
    <tr><td>Application Name</td><td><input type="text" name="appName" value="{{app.appName}}"/></td></tr>
    <tr><td>Purpose</td><td><textarea cols="80" rows="5" name="appPurpose">{{app.appPurpose}}</textarea></td></tr>
    <tr><td>Owners</td><td><select id="owners-list" name="owners" multiple="multiple"></td></tr>
    <tr><td>Supports</td><td><select id="supports-list" name="supports" multiple="multiple"></td></tr>
    <tr><td>Users Location</td><td><input type="text" name="usersLocation" value="{{app.usersLocation}}"/></td></tr>
    <tr><td>Criticality</td><td><select id="criticalities-list" name="criticality"></td></tr>
    <tr><td>Business Impact</td><td><textarea cols="80" rows="5" name="businessImpact">{{app.businessImpact}}</textarea></td></tr>
    <tr><td>Technical Details</td><td><textarea cols="80" rows="5" name="technicalDetails">{{app.technicalDetails}}</textarea></td></tr>
    <tr><td>Middlewares</td><td><select id="middlewares-list" name="middlewares" multiple="multiple"></td></tr>
    <tr><td>MS Sql DBs</td><td><select id="mssqls-list" name="mssqls" multiple="multiple"></td></tr>
    <tr><td>Oracle DBs</td><td><select id="oracles-list" name="oracles" multiple="multiple"></td></tr>
    <tr><td></td><td><input type="submit" /></td></tr>
  </table>
</form>